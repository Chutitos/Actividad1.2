<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <Button
        android:id="@+id/Registrarse"
        android:layout_width="331dp"
        android:layout_height="49dp"
        android:backgroundTint="#616161"
        android:text="Registrarse"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="545dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:scaleType="matrix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:srcCompat="@drawable/minimalist_green_android_logo_xmvp2a4zfaq70rlt_xmvp2a4zfaq70rlt" />

    <TextView
        android:id="@+id/txtTienesCuenta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Tienes Cuenta? - "
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="635dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#000000"
        android:text="INGRESA AQUI"
        android:textColor="#3BAAFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="635dp" />

    <EditText
        android:id="@+id/correoUsuario"
        android:layout_width="331dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint=" Correo Electronico"
        android:inputType="textEmailAddress"
        android:background="@color/white"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="83dp" />

    <EditText
        android:id="@+id/nombreUsuario"
        android:layout_width="331dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint=" Nombre Usuario"
        android:background="@color/white"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="153dp" />

    <EditText
        android:id="@+id/passwordUsuario"
        android:layout_width="331dp"
        android:layout_height="49dp"
        android:background="@color/white"
        android:ems="10"
        android:hint=" Contraseña"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="229dp" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="331dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint=" Confirmar Contraseña"
        android:background="@color/white"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="308dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="331dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint=" Número Telefónico"
        android:background="@color/white"
        android:inputType="number"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="385dp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="331dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint=" Fecha Nacimiento"
        android:background="@color/white"
        android:inputType="date"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="464dp" />

</androidx.constraintlayout.widget.ConstraintLayout>